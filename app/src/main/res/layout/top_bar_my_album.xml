<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/navigation_bar_bg"
    android:orientation="horizontal">

    <Button
        android:id="@+id/naviMenu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/menu_btn_selector" />

    <View
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <Button
        android:id="@+id/doPost"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/post_btn_selector" />
    <Button
        android:id="@+id/groupPost"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/group_post_btn_selector" />

    <Button
        android:id="@+id/sort"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/option_btn_selector" />


</LinearLayout>