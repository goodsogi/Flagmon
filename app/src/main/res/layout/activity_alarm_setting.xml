<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/navigation_bar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:layout_width="27.5dp"
            android:layout_height="27.5dp"
            android:background="@drawable/back_btn"
            android:onClick="goBack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:text="알림 설정"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <ScrollView   android:layout_width="match_parent"
                  android:layout_height="match_parent" android:background="#ffffff">
        <LinearLayout
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:textSize="14sp" android:textStyle="bold"
            android:layout_width="0px" android:layout_weight="1"
            android:layout_height="wrap_content" android:paddingLeft="15dp" android:paddingRight="10dp"
            android:text="친구의 플래그 발견\n친구의 플래그 꽂은 땅에 내가 도착시 알려줍니다." android:textColor="#000000"
            />
    <CheckBox
        android:id="@+id/flagAlarm"
        android:layout_width="38dp"
        android:layout_height="38dp" android:button="@drawable/setting_checkbox_selector" android:layout_marginRight="5dp"/>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px" android:background="#d3d3d3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:textSize="14sp" android:textStyle="bold"
            android:layout_width="0px" android:layout_weight="1"
            android:layout_height="wrap_content" android:paddingLeft="15dp" android:paddingRight="10dp"
            android:text="보물상자 발견\n보물상자를 발견시 알려줍니다." android:textColor="#000000"
            />
        <CheckBox
            android:id="@+id/treasureFind"
            android:layout_width="38dp"
            android:layout_height="38dp" android:button="@drawable/setting_checkbox_selector" android:layout_marginRight="5dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px" android:background="#d3d3d3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:textSize="14sp" android:textStyle="bold"
            android:layout_width="0px" android:layout_weight="1"
            android:layout_height="wrap_content" android:paddingLeft="15dp" android:paddingRight="10dp"
            android:text="보물상자 알림\n친구가 내 보물상자를 파갈 때 알려줍니다." android:textColor="#000000"
            />
        <CheckBox
            android:id="@+id/treasureAlarm"
            android:layout_width="38dp"
            android:layout_height="38dp" android:button="@drawable/setting_checkbox_selector" android:layout_marginRight="5dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px" android:background="#d3d3d3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:textSize="14sp" android:textStyle="bold"
            android:layout_width="0px" android:layout_weight="1"
            android:layout_height="wrap_content" android:paddingLeft="15dp" android:paddingRight="10dp"
            android:text="덧글 알림\n친구가 내 게시물에 덧글을 남길 때 알려줍니다." android:textColor="#000000"
            />
        <CheckBox
            android:id="@+id/replyAlarm"
            android:layout_width="38dp"
            android:layout_height="38dp" android:button="@drawable/setting_checkbox_selector" android:layout_marginRight="5dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px" android:background="#d3d3d3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:textSize="14sp" android:textStyle="bold"
            android:layout_width="0px" android:layout_weight="1"
            android:layout_height="wrap_content" android:paddingLeft="15dp" android:paddingRight="10dp"
            android:text="소리알림" android:textColor="#000000"
            />
        <CheckBox
            android:id="@+id/soundEnabled"
            android:layout_width="38dp"
            android:layout_height="38dp" android:button="@drawable/setting_checkbox_selector" android:layout_marginRight="5dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px" android:background="#d3d3d3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:textSize="14sp" android:textStyle="bold"
            android:layout_width="0px" android:layout_weight="1"
            android:layout_height="wrap_content" android:paddingLeft="15dp" android:paddingRight="10dp"
            android:text="진동모드로 변경시 진동전환" android:textColor="#000000"
            />
        <CheckBox
            android:id="@+id/vibrationMode"
            android:layout_width="38dp"
            android:layout_height="38dp" android:button="@drawable/setting_checkbox_selector" android:layout_marginRight="5dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px" android:background="#d3d3d3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:textSize="14sp" android:textStyle="bold"
            android:layout_width="0px" android:layout_weight="1"
            android:layout_height="wrap_content" android:paddingLeft="15dp" android:paddingRight="10dp"
            android:text="진동알림" android:textColor="#000000"
            />
        <CheckBox
            android:id="@+id/vibration"
            android:layout_width="38dp"
            android:layout_height="38dp" android:button="@drawable/setting_checkbox_selector" android:layout_marginRight="5dp"/>
    </LinearLayout>

</LinearLayout>
    </ScrollView>
    </LinearLayout>