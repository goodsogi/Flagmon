<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/navigation_bar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:layout_width="27.5dp"
            android:layout_height="27.5dp"
            android:background="@drawable/back_btn"
            android:onClick="goBack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="친구찾기"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#eff1f3"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:text="친구 찾기"
        android:textColor="#657487"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:clickable="true"
        android:drawableLeft="@drawable/facebook"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="findFriendOnFacebook"
        android:paddingLeft="10dp"
        android:text="Facebook에서 친구 찾기"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:clickable="true"
        android:drawableLeft="@drawable/twitter"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="findFriendOnTwitter"
        android:paddingLeft="10dp"
        android:text="Twitter에서 친구 찾기"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:clickable="true"
        android:drawableLeft="@drawable/contact"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="findFriendInContact"
        android:paddingLeft="10dp"
        android:text="연락처로부터 친구 찾기"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:clickable="true"
        android:drawableLeft="@drawable/search_name"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="searchFriendByName"
        android:paddingLeft="10dp"
        android:text="이름으로 검색"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#eff1f3"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:text="받은 신청"
        android:textColor="#657487"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/list_got_friend_request"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#eff1f3"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:text="보낸 신청"
        android:textColor="#657487"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/list_sent_friend_request"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />


</LinearLayout>