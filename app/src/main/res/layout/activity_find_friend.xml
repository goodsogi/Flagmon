<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/navigation_bar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:layout_width="27.5dp"
            android:layout_height="27.5dp"
            android:background="@drawable/back_btn"
            android:onClick="goBack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/find_friend"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#eff1f3"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:text="@string/find_friend"
        android:textColor="#657487"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:clickable="true"
        android:drawableLeft="@drawable/facebook"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="findFriendOnFacebook"
        android:paddingLeft="10dp"
        android:text="@string/find_friend_at_facebook"
        android:textColor="#000000" />

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="44dp"-->
        <!--android:background="#ffffff"-->
        <!--android:clickable="true"-->
        <!--android:drawableLeft="@drawable/twitter"-->
        <!--android:drawablePadding="5dp"-->
        <!--android:gravity="center_vertical"-->
        <!--android:onClick="findFriendOnTwitter"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:text="@string/find_friend_at_twitter"-->
        <!--android:textColor="#000000" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:clickable="true"
        android:drawableLeft="@drawable/contact"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="findFriendInContact"
        android:paddingLeft="10dp"
        android:text="@string/find_friend_at_contact"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:clickable="true"
        android:drawableLeft="@drawable/search_name"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="searchFriendByName"
        android:paddingLeft="10dp"
        android:text="@string/search_by_name"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/gotRequestTitle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#eff1f3"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:text="@string/got_request"
        android:visibility="gone"
        android:textColor="#657487"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/list_got_friend_request"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/sentRequestTitle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="gone"
        android:background="#eff1f3"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:text="@string/sent_request"
        android:textColor="#657487"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/list_sent_friend_request"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />


</LinearLayout>