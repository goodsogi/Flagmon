<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/navigation_bar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:layout_width="27.5dp"
            android:layout_height="27.5dp"
            android:background="@drawable/back_btn"
            android:onClick="goBack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Facebook 친구 찾기"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

       
    </LinearLayout>
    
    <TextView
        android:id="@+id/facebookFriendCount"
        android:layout_width="match_parent"
        android:layout_height="45dp" android:gravity="center_vertical" android:paddingLeft="13dp"
        android:textColor="#657487"
        android:background="#eff1f3"
        />
    <ListView
        android:id="@+id/listFacebook"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>