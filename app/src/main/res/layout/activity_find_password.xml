<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:paddingLeft="27dp" android:paddingRight="27dp"
    android:layout_height="match_parent" android:background="@drawable/p12_bg">

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        />

    <EditText
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/p12_bg_icon0001"
        android:drawableRight="@drawable/p12_bg_icon0003"
        android:hint="이메일"
        android:textColor="#ffffff"
        android:inputType="textEmailAddress"
        android:privateImeOptions="defaultInputmode=english;"
        android:textColorHint="#ffffff"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:onClick="requestPassword"
        android:text="보내기"
        android:layout_marginTop="30dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal"
        android:layout_marginBottom="27dp"
        android:gravity="center"
        >
        <Button
            android:layout_width="86dp"
            android:layout_height="33dp"
            android:onClick="goBackLogin"
            android:text="로그인"
            android:layout_marginRight="82dp"
            />
        <Button
            android:layout_width="86dp"
            android:layout_height="33dp"
            android:onClick="showPolicy"
            android:background="@drawable/policy_button_selector"
            />


    </LinearLayout>


</LinearLayout>