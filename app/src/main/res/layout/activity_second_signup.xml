    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/p12_icon_01" />

        <TextView
            android:id="@+id/text_service"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="showPolicy"
            android:text="@string/service_policy"
            android:textColor="#ffffff" />

        <CheckBox
            android:id="@+id/checkbox_service"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:button="@drawable/checkbox_button_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/p12_icon_01" />

        <TextView
            android:id="@+id/text_privacy"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="showPolicy"
            android:text="@string/privacy_policy"
            android:textColor="#ffffff" />

        <CheckBox
            android:id="@+id/checkbox_privacy"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:button="@drawable/checkbox_button_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/p12_icon_01" />

        <TextView
            android:id="@+id/text_location"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="showPolicy"
            android:text="@string/location_policy"
            android:textColor="#ffffff" />

        <CheckBox
            android:id="@+id/checkbox_location"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:button="@drawable/checkbox_button_selector" />
    </LinearLayout>

    <Button
        android:id="@+id/finishSignup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/finish_button_selector"
        android:enabled="false"
        android:onClick="finishSignUp" />


</LinearLayout>