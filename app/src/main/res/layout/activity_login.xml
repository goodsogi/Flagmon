<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p12_bg"
    android:orientation="vertical"
    android:paddingLeft="27dp"
    android:paddingRight="27dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/p12_bg_icon0001"
        android:drawableRight="@drawable/p12_bg_icon0003"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:privateImeOptions="defaultInputmode=english;"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/p12_bg_icon0002"
        android:drawableRight="@drawable/p12_bg_icon0004"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:privateImeOptions="defaultInputmode=english;"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:onClick="goToFindPassword"
        android:text="비밀번호가 기억나지 않으세요?"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:onClick="doLogin"
        android:background="@drawable/login_btn"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="27dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="86dp"
            android:layout_height="33dp"
            android:layout_marginRight="82dp"
            android:background="@drawable/join_btn_selector"
            android:onClick="signUp"
             />

        <Button
            android:layout_width="86dp"
            android:layout_height="33dp"
            android:background="@drawable/policy_button_selector"
            android:onClick="showPolicy" />


    </LinearLayout>


</LinearLayout>